.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px

  img.pull-right
    width 50px

.draft-ops-lobby

  .no-wrap
    white-space nowrap

  background-image  url('https://s3-us-west-2.amazonaws.com/draftops/draftops-background-large.png')
  background-color #CCCCCC

  .navbar ul li
    color #E1E1E1

  .navbar-brand
    padding-top 5px

  .draft-ops-logo
    /*resize both*/

  .login-btn
    margin-top .5rem

  .lobby-heading
    background #171717

  .lobby-heading
  .label
    font-family "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size 1.2rem
    font-weight 600
    line-height 1.5rem
    text-transform uppercase
    color #E1E1E1

  .lobby-heading button
    background-color #303030

  .mission-row
    background-color #535353

  .mission-row h2
    text-transform uppercase
    font-weight 300
    font-size 2.5rem
    color #E1E1E1
    margin-top  1rem

  .mission-row input
    width 35rem
    margin-top .8rem

  .refresh
    font-size 3rem
    padding .7rem .5rem

  .lobby-body
    padding-top 0

  .contest-row
    /*border-style */
    border-bottom 1px solid lightgray
    padding 1rem 0

  .contest-row:hover
    background-color #E6E6E6
    cursor pointer

  .contest-name
    font-weight 700
    font-family "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    color red

  
  .border-right
    /*border-style solid*/
    border-right solid 1px #B7b7b7

  .title-row
    background-color #A5A5A5
    text-transform uppercase
    font-size 1.2rem
    color #E1E1E1

  .glyphicon-sort
    font-size 1rem

